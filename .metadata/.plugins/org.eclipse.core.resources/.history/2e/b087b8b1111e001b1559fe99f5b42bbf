package seccaoOitoOrientadaObjetos.application;

import java.util.Locale;
import java.util.Scanner;

import seccaoOitoOrientadaObjetos.entities.Banco;

public class ProgramaCaixaEletronico {

	public static void main(String[] args) {

		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Entre com o nome do titular");
		System.out.println("Titular: ");
		String nome = sc.nextLine();
		System.out.println("Entre com o número da conta: ");
		int numconta = sc.nextInt();
		System.out.println("Esse é um deposito inicial (y/n)? ");
		boolean depoinic = sc.nextBoolean();
		if (depoinic) {
			System.out.println("Entre com o valor inicial: R$");
			double saldo = sc.nextDouble();
		} else {
			double saldo = 0.0;
		}
		
		System.out.printf("Numero conta %d, Titular: %s, Saldo R$ %.2f%n", numconta, nome, saldo);
		
		System.out.println("Digite a quantidade para deposito: R$ ");
		saldo = sc.nextDouble();
		
		
		
		
		sc.close();
	}

}
